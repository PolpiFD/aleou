# =============================================================================
# Configuration des APIs
# =============================================================================

# OpenAI API (OBLIGATOIRE)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4.1-nano

# Google Maps API (OBLIGATOIRE)
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# Firecrawl API (OPTIONNEL - si absent, mode Legacy activé)
FIRECRAWL_API_KEY=your_firecrawl_api_key_here

# Rate limiting Firecrawl (plan gratuit: 10 req/minute max)
# NOTE: Actuellement, quand extract_website=True, TOUT le traitement 
# devient séquentiel (1 batch). Il faudrait séparer les flux :
# - Cvent + GMaps en parallèle (4 workers)
# - Seul Firecrawl séquentiel
FIRECRAWL_RATE_LIMIT=10
FIRECRAWL_WAIT_SECONDS=65

# =============================================================================
# Configuration du scraping Playwright
# =============================================================================

# Mode headless (true/false)
PLAYWRIGHT_HEADLESS=true

# Timeout en millisecondes
PLAYWRIGHT_TIMEOUT=25000

# Nombre de tentatives de retry
MAX_RETRY_ATTEMPTS=2

# =============================================================================
# Configuration du rate limiting
# =============================================================================

# Limite de requêtes par seconde pour Google Maps
GOOGLE_MAPS_RATE_LIMIT=10

# Limite de requêtes par seconde pour OpenAI
OPENAI_RATE_LIMIT=5

# Délai de base entre les requêtes (en secondes)
BASE_DELAY=0.1

# Délai maximum entre les requêtes (en secondes)
MAX_DELAY=5.0

# =============================================================================
# Configuration du traitement parallèle
# =============================================================================

# Nombre maximum de workers parallèles
MAX_PARALLEL_WORKERS=4

# Taille des chunks de traitement
CHUNK_SIZE=10

# Taille des batches
BATCH_SIZE=50

# =============================================================================
# Configuration du cache
# =============================================================================

# Activation du cache (true/false)
ENABLE_CACHE=true

# Durée de vie du cache en secondes (3600 = 1 heure)
CACHE_TTL=3600

# URL Redis (optionnel - si absent, utilise le cache fichier local)
REDIS_URL=

# Fichier de cache local
CACHE_FILE=cache/gmaps_cache.json

# =============================================================================
# Configuration Caddy
# =============================================================================

# Email pour les certificats Let's Encrypt
CADDY_EMAIL=your_email@domain.com